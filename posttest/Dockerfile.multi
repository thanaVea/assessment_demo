COPY --from=builder /app/build/libs/petstore-0.0.1-SNAPSHOT.jar petstore-0.0.1-SNAPSHOT.jar
ENTRYPOINT ["java", "-jar", "petstore-0.0.1-SNAPSHOT.jar"]